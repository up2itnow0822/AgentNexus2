{
  "name": "@agentnexus/agent-runtime",
  "version": "1.0.0",
  "description": "AgentNexus Agent Runtime Environment",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
