# Backend Environment Variables (Example)
NODE_ENV=development
PORT=3001

# Alchemy / Account Abstraction
ALCHEMY_API_KEY=your_alchemy_key
AA_CHAIN=base-sepolia # options: base, base-sepolia
ENTRY_POINT_ADDRESS=0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789
PAYMASTER_POLICY_ID=your_policy_id

# Base RPC URLs (Primary Chain)
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Multi-Chain RPC URLs
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
POLYGON_RPC_URL=https://polygon-rpc.com
OPTIMISM_RPC_URL=https://mainnet.optimism.io
BSC_RPC_URL=https://bsc-dataseed.binance.org
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# Contracts (Base Sepolia Testnet - Deployed Dec 7, 2025)
ESCROW_CONTRACT_ADDRESS=0x37A7B1f10b87f31ad916Fb3518118f8AA0d8d2fC
ENTITLEMENTS_CONTRACT_ADDRESS=0x3c8f32F9cF41Dc255129d6Add447218053743b33
# Chain-specific contract addresses (optional, falls back to generic above)
# ARBITRUM_ESCROW_CONTRACT_ADDRESS=0x...
# ARBITRUM_ENTITLEMENTS_CONTRACT_ADDRESS=0x...

# Database / Cache
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agentnexus
REDIS_URL=redis://localhost:6379

# ⚠️ PRODUCTION: Generate secure secret with: openssl rand -base64 32
JWT_SECRET=change_this_to_a_secure_secret

# Agent Zero Configuration
AGENT_ZERO_BASIC_TOKEN_ID=1
AGENT_ZERO_PRO_TOKEN_ID=2
AGENT_ZERO_PRO_PRICE=50000000 # 50 USDC (6 decimals)
AGENT_ZERO_QUICK_IMAGE=agentnexus/agent-zero-quick:latest
AGENT_ZERO_FULL_IMAGE=agentnexus/agent-zero-full:latest
AGENT_ZERO_BASIC_RATE_LIMIT=10
AGENT_ZERO_BASIC_TIMEOUT=300000
AGENT_ZERO_PRO_TIMEOUT=1800000
AGENT_ZERO_PRO_MAX_MEMORY=4GB

# ============================================
# Security & Compliance Toggles
# ============================================
# All toggles default to FALSE (compliance-capable, not enforcing)
# Set to 'true' to enable enforcement

# Geofencing (country-based access control)
COMPLIANCE_GEOFENCE_ENABLED=false
COMPLIANCE_BLOCKED_COUNTRIES=KP,IR,CU,SY,RU

# KYC Verification
COMPLIANCE_KYC_ENABLED=false
COMPLIANCE_KYC_REQUIRED_CATEGORIES=trading,financial,high-risk

# Agent Category Restrictions
COMPLIANCE_AGENT_RESTRICTIONS_ENABLED=false
COMPLIANCE_BLOCKED_CATEGORIES=
COMPLIANCE_CATEGORY_BY_COUNTRY=

# Audit Logging
COMPLIANCE_AUDIT_LOGGING_ENABLED=false
COMPLIANCE_AUDIT_RETENTION_DAYS=90
COMPLIANCE_AUDIT_LOG_LEVEL=standard

# Runtime Isolation (Docker security)
COMPLIANCE_RUNTIME_ISOLATION_ENABLED=false
COMPLIANCE_RUNTIME_NETWORK_MODE=none
COMPLIANCE_RUNTIME_READONLY_ROOTFS=true
COMPLIANCE_RUNTIME_DROP_CAPS=true
COMPLIANCE_RUNTIME_SECCOMP=true
COMPLIANCE_RUNTIME_MAX_MEMORY_MB=512
COMPLIANCE_RUNTIME_MAX_CPU_PERCENT=50
COMPLIANCE_RUNTIME_TIMEOUT_SECONDS=300

# ============================================
# x402 Payment Protocol (Optional)
# ============================================
# Enable x402 internet-native payments
ENABLE_X402=false
# Coinbase facilitator URL
X402_FACILITATOR_URL=https://x402.coinbase.com
# Network: "base" or "base-sepolia"
X402_NETWORK=base-sepolia
# Wallet address to receive payments
X402_PAYMENT_RECIPIENT=0xYourRecipientAddress
# Maximum payment amount in USDC (safety limit)
X402_MAX_PAYMENT_USDC=100
