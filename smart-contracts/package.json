{
  "name": "@agentnexus/smart-contracts",
  "version": "1.0.0",
  "description": "AgentNexus Smart Contracts",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:gas": "forge test --gas-report",
    "deploy:sepolia": "forge script script/Deploy.s.sol --rpc-url sepolia --broadcast --verify",
    "deploy:mainnet": "forge script script/Deploy.s.sol --rpc-url mainnet --broadcast --verify",
    "verify": "forge verify-contract",
    "clean": "forge clean",
    "lint": "solhint 'src/**/*.sol'",
    "format": "forge fmt"
  },
  "devDependencies": {
    "solhint": "^4.1.1"
  }
}

