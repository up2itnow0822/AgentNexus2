# AgentNexus Multi-Chain Deployment Configuration
# ================================================
# Copy this file to .env and fill in your values
# Get API keys from: Alchemy, Infura, or QuickNode

# Deployer Configuration
DEPLOYER_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE
PLATFORM_FEE_RECIPIENT=0xYOUR_TREASURY_ADDRESS

# ====================
# MAINNET RPC URLS
# ====================

# Base (Primary Chain)
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Or public: https://mainnet.base.org

# Arbitrum
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Or public: https://arb1.arbitrum.io/rpc

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Or public: https://polygon-rpc.com

# Optimism
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Or public: https://mainnet.optimism.io

# BNB Chain
BSC_RPC_URL=https://bsc-dataseed.binance.org
# Or: https://bsc-dataseed1.defibit.io

# Avalanche
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
# Or Infura: https://avalanche-mainnet.infura.io/v3/YOUR_INFURA_KEY

# Ethereum
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# ====================
# TESTNET RPC URLS
# ====================

# Base Sepolia
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Or public: https://sepolia.base.org

# Arbitrum Sepolia
ARBITRUM_SEPOLIA_RPC_URL=https://arb-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Or public: https://sepolia-rollup.arbitrum.io/rpc

# Polygon Amoy (replaced Mumbai)
POLYGON_AMOY_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Or public: https://rpc-amoy.polygon.technology

# Ethereum Sepolia
ETHEREUM_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# ====================
# BLOCK EXPLORER API KEYS
# ====================
# For contract verification via forge verify-contract

# Etherscan-powered explorers (Base/Ethereum). BASESCAN_API_KEY is kept as an alias.
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_KEY
BASESCAN_API_KEY=YOUR_ETHERSCAN_KEY # optional alias for backwards compatibility

ARBISCAN_API_KEY=YOUR_ARBISCAN_KEY
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_KEY
OPTIMISM_API_KEY=YOUR_OPTIMISM_KEY
BSCSCAN_API_KEY=YOUR_BSCSCAN_KEY
SNOWTRACE_API_KEY=YOUR_SNOWTRACE_KEY
